{
  "manifest_version": 2,
  "version": "0.0.1",

  "name": "Noplay",
  "short_name": "Noplay",
  "description": "Video auto play blocked for good",
  "author": "Dorian Camilleri",
  "homepage_url": "https://github.com/dcamilleri/noplay",

  "minimum_chrome_version": "22.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": "icons/default.png"
    // "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "noplay.js"
      ]
    }
  ]
}